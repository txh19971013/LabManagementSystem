<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner_white_20dp"
    android:padding="30dp"
    android:layout_margin="30dp"
    android:layout_gravity="center">

    <EditText
        android:id="@+id/courseDialog_courseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入课程名"
        android:gravity="center"
        android:textSize="18sp"
        android:background="@drawable/shape_corner_white_20dp"
        android:padding="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/courseDialog_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="取消"
                android:textSize="18sp"
                android:background="@drawable/ripple_cancel"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/courseDialog_confirm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="确定"
                android:textSize="18sp"
                android:background="@drawable/ripple_confirm"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>